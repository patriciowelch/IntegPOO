{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Compilar g++",
            "command": "C:\\MinGW\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-I${workspaceFolder}/cliente/code/headers",
                "${file}",
                "${fileDirname}\\XmlRpcClient.cpp",
                "${fileDirname}\\XmlRpcServer.cpp",
                "${fileDirname}\\XmlRpcServerConnection.cpp",
                "${fileDirname}\\XmlRpcServerMethod.cpp",
                "${fileDirname}\\XmlRpcSocket.cpp",
                "${fileDirname}\\XmlRpcSource.cpp",
                "${fileDirname}\\XmlRpcUtil.cpp",
                "${fileDirname}\\XmlRpcValue.cpp",
                "${fileDirname}\\XmlRpcDispatch.cpp",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-std=c++11",
                "-lws2_32"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Ejecutar el programa",
            "type": "shell",
            "command": "${fileDirname}\\${fileBasenameNoExtension}.exe",
            "group": {
              "kind": "test",
              "isDefault": true
            },
            "presentation": {
              "echo": true,
              "reveal": "always",
              "focus": false,
              "panel": "shared"
            },
            "detail": "Ejecutar el archivo .exe generado por g++"
        }
    ],
    "version": "2.0.0"
}